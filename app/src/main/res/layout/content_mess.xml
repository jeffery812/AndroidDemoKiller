<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_mess"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.max.tang.demokiller.activity.MessActivity"
    tools:showIn="@layout/activity_mess"
    >
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="call"
      android:onClick="call"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="隐式启动 SortActivity"
      android:onClick="startSortActivity"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="test RxAndroid Join"
      android:onClick="testRxAndroidJoin"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="test RxAndroid Merge"
      android:onClick="testRxAndroidMerge"
      />
  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="test RxAndroid Thread"
      android:onClick="testRxAndroidThread"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Start Service"
      android:onClick="startService"
      />

  <Button
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Thread vs Runnable"
      android:onClick="threadTest"
      />

</LinearLayout>
